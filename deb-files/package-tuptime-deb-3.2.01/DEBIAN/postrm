#!/bin/sh
set -e

if [ "$1" = "remove" ] || [ "$1" = "purge" ] ; then

	if [ -e "/lib/systemd/system/tuptime.service" ]; then
                rm -f /lib/systemd/system/tuptime.service
        fi

        systemctl stop tuptime
        systemctl disable tuptime
        systemctl daemon-reload

fi

if [ "$1" = "purge" ] ; then

	if [ -d "/var/lib/tuptime/" ]; then
		rm -rf /var/lib/tuptime/
	fi
fi
